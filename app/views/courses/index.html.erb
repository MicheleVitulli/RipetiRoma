<p id="notice"><%= notice %></p>

<h1>Courses</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>

      <tr>
        <td><h5><%=course.teacher.email%> insegna a</h5></td>
        <td><h5><%=course.student.email%></h5></td>
        <% if course.subject!= nil %>
          <td><h5><%=course.subject.name%></h5></td>

        <% else %>
        <td><ul><% @subjects.each do |materia| %>
          <li><%= link_to 'Seleziona '+materia.name, aggiungi_materia_subject_path(course.id, materia.id) %></li>


        <% end %></ul></td>
        <% end %>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path %>
